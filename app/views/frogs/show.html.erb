<h1><%= @frog.name %> Frog</h1>
<p>Color: <%= @frog.color %></p>
<p>Lives: <%= link_to @frog.pond.name, pond_path(@frog.pond.id) %></p>
<% unless @frog.tadpoles.empty? %>
  <h2>Children</h2>
  <ol>
    <% @frog.tadpoles.each do |tadpole| %>
      <li><%= link_to tadpole.name, tadpole_path(tadpole.id) %></li>
    <% end %>
  </ol><br>
<% end %>
<p><strong><%= link_to 'Create new tadpole baby', new_frog_tadpole_path(@frog) %></strong></p>
<%= link_to 'Back', frogs_path(@frogs) %> | 
<%= link_to 'Edit', edit_frog_path(@frog) %> |
<%= link_to 'Delete', @frog, :method => 'delete' %>
